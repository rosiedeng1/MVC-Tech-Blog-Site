<div class="row mt-4">
  <div class="col-md-6">
    <h3>Update Post</h3>

    <form class="form new-post-form">
      <div class="form-group">
        <label for="title-name">title:</label>
        <input class="form-input" type="text" id="blog-title" name="blog-title" value=
        "{{[title]}}"/>
      </div>
  
      <div class="form-group">
        <label for="content">content:</label>
        <textarea class="form-input" id="content" name="blog-content">{{content}}</textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Update Post</button>
      </div>
    </form>
  </div>


</div>

<script src="./js/updatepost.js"></script>